# Environment Variables for Bioinformatics Docker Environment
# Copy this file to .env and customize as needed

# RStudio password (default: rstudio)
RSTUDIO_PASSWORD=rstudio

# Jupyter token (leave empty for no token)
JUPYTER_TOKEN=

# Disable authentication (set to false for production)
DISABLE_AUTH=true

# Memory limits (adjust based on your system)
MEMORY_LIMIT=16G
MEMORY_RESERVATION=8G

# Ports (change if defaults are in use)
RSTUDIO_PORT=8787
JUPYTER_PORT=8888
VSCODE_PORT=8080